print("Vamos a descubrir cuándo cumplirás 100 años")
nombre = input("Ingresa tu nombre ")
edad = input("Ingresa tu edad ")
cuando_cumpla_100_años = 2121-int(edad)
print(f"Cumplirás 100 años en {cuando_cumpla_100_años}")

print("Vamos a calcular el volumen de una esfera")
radio = float(input("Inserta el radio de la esfera "))
pi = 3.1416
volumen = (4/3)*pi*radio**3
print(f"El volumen de la esfera es proximadamente: {volumen}")

print("Vamos a sumar un número de una manera diferente")
n = (input("Ingrese un número "))
nn = str(n+n)
nnn = str(n+n+n)
suma = int(n)+int(nn)+int(nnn)
print(f"El resultado de la suma es {suma}")

print("Vamos a descubrir en qué extensión tienes un archivo")
nombre = input("Ingresa el nombre de tu documento ")
lista=nombre.split(".")
print(lista[1])

print("Vamos a calcular el área de un círculo")
radio = float(input("Ingrese el radio del círculo "))
pi=3.1416
area = pi*radio**2
print(f"El radio del círculo es aproximadamente : {area}") 

print("Vamos a leer tu nombre al revés")
nombre = input("Ingresa tu nombre completo")
print((nombre[::-1]))
